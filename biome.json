{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": ["./node_modules/@weaverse/biome/biome.json"],
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "useUniqueElementIds": "off",
        "useSortedClasses": {
          "level": "on",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      },
      "correctness": {
        "noUnusedVariables": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}